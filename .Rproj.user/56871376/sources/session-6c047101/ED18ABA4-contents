run_as shiny;

server {
  listen 3838;

  # Specify where the logs should be stored
  log_dir /var/log/shiny-server;

  location /walmart {
    app_dir /srv/shiny-server/walmart;
  }

  location /RenderUI {
    app_dir /srv/shiny-server/RenderUI;
  }

  location /RenderUI2 {
    app_dir /srv/shiny-server/RenderUI2;
  }

  location / {
    app_dir /srv/shiny-server/;
  }
}
