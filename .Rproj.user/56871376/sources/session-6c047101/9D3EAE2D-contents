library(tidyverse)
library(SveltePlots)
data("purchases")
purchases_age <- purchases_age %>% 
  dplyr::slice(-c(1:30))
purchases_age <- purchases_age %>% 
  dplyr::group_by(age) %>% 
  dplyr::sample_n(size = 25) %>% 
  dplyr::ungroup()


SveltePlots::sp(
  data = purchases_age,
  spaes(x = adjusted_timestamp, y = revenue_roll),
  facet_var = "age",
  type = "line"
) %>% 
  SveltePlots::sp_facet(ncol = 3, scales = "free")
